<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <% content_for :title, "Item Categories | #{current_organization.name}" %>
        <h1>
          Item Categories
          <small>for <%= current_organization.name %></small>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to(dashboard_path) do %>
              <i class="fa fa-dashboard"></i> Home
            <% end %>
          </li>
          <li class="breadcrumb-item"><a href="#">All Item Categories</a></li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <!-- Default box -->
        <div class="card card-primary card-outline card-outline-tabs">
          <div class="card-body">
            <div class='flex justify-end my-3'>
              <%= new_button_to new_item_category_path(organization_id: current_organization), {text: "New Item Category"} %>
            </div>

            <div class="tab-content" id="custom-tabs-three-tabContent">
              <div class="tab-pane fade show active" id="custom-tabs-three-home" role="tabpanel" aria-labelledby="custom-tabs-three-home-tab">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Items In Category</th>
                      <th class="text-center">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @item_categories.each do |item_category| %>
                      <tr class='hover:bg-gray-100' data-item-category-id="<%= item_category.id %>">
                        <td><%= item_category.name %></td>
                        <td><%= item_category.description %></td>
                        <td>
                          <ul>
                            <% item_category.items.each do |item| %>
                              <li>
                                <%= link_to(item.name, item_path(item.id), class: 'text-blue-500') %>
                              </li>
                            <% end %>
                          </ul>
                        </td>
                        <td>
                          <%= view_button_to item_category_path(item_category.id) %>
                          <%= edit_button_to edit_item_category_path(item_category.id) %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div><!-- /.box-body.table-responsive -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

